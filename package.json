{
  "name": "@bigbang-sdk/next-query",
  "version": "3.1.1",
  "description": "React hook for fetching data in Next.js client components using SWR",
  "keywords": [
    "nextjs",
    "query",
    "react",
    "swr"
  ],
  "author": "Bigbang",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bigbang-sdk/next-query.git"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && tsc -p tsconfig.json",
    "pack": "npm run build && npm pack --pack-destination ../0-archives"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "semantic-release": "^24.2.3",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "zod": "^3.24.3"
  }
}
